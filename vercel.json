{
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "cleanUrls": true,
  "trailingSlash": false,
  "regions": [
    "sin1"
  ],
  "rewrites": [
    {
      "source": "/api/market/:path*",
      "destination": "/api/market"
    },
    {
      "source": "/api/portfolio/:path*",
      "destination": "/api/portfolio"
    },
    {
      "source": "/api/watchlist/:path*",
      "destination": "/api/watchlist"
    },
    {
      "source": "/api/ai/:path*",
      "destination": "/api/ai"
    },
    {
      "source": "/api/scanner/:path*",
      "destination": "/api/scanner"
    },
    {
      "source": "/api/ohlcv",
      "destination": "/api/ohlcv"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, proxy-revalidate"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Demo-User-Id"
        }
      ]
    }
  ]
}
